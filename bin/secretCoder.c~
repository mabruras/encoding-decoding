char* collapseKey(FILE* keyFile) {
	char* key;
	char currentChar;

	while (!feof(keyFile) && fscanf(keyFile, "%c", &currentChar) == 1) {
		if (isalpha(currentChar)) {
			key += currentChar;
		}
	}
	
	return key;
}

